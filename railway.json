{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pnpm install && pnpm build"
  },
  "deploy": {
    "startCommand": "pnpm start",
    "numReplicas": 1,
    "restartPolicyMaxRetries": 10
  },
  "plugins": [
    "postgres",
    "redis"
  ]
}
