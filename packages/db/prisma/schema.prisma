generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  passwordHash String?
  name      String?
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts      Account[]
  contacts      Contact[]
  opportunities Opportunity[]
  activities    Activity[]
}

model Account {
  id        String   @id @default(uuid())
  name      String
  domain    String?
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contacts      Contact[]
  opportunities Opportunity[]
  files         FileLink[]
  activities    Activity[]
}

model Contact {
  id        String   @id @default(uuid())
  account   Account? @relation(fields: [accountId], references: [id])
  accountId String?
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  title     String?
  owner     User?    @relation(fields: [ownerId], references: [id])
  ownerId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  files FileLink[]
  activities Activity[]
}

model Opportunity {
  id          String           @id @default(uuid())
  account     Account          @relation(fields: [accountId], references: [id])
  accountId   String
  name        String
  stage       String           @default("prospect")
  amount      Float?
  closeDate   DateTime?
  owner       User             @relation(fields: [ownerId], references: [id])
  ownerId     String
  probability Float?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  files FileLink[]
  activities Activity[]
}

model Activity {
  id          String      @id @default(uuid())
  account     Account?    @relation(fields: [accountId], references: [id])
  accountId   String?
  contact     Contact?    @relation(fields: [contactId], references: [id])
  contactId   String?
  opportunity Opportunity? @relation(fields: [opportunityId], references: [id])
  opportunityId String?
  type        String
  dueDate     DateTime?
  completedAt DateTime?
  content     String?
  owner       User        @relation(fields: [ownerId], references: [id])
  ownerId     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model FileLink {
  id              String     @id @default(uuid())
  account         Account?   @relation(fields: [accountId], references: [id])
  accountId       String?
  contact         Contact?   @relation(fields: [contactId], references: [id])
  contactId       String?
  opportunity     Opportunity? @relation(fields: [opportunityId], references: [id])
  opportunityId   String?
  dropboxFolderUrl String
  lastSyncedAt    DateTime?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}
