# Production environment variables for Fastify API
# NEVER commit actual production values - use your deployment platform's secrets management

# Environment
APP_ENV=production

# Database - Use a cloud PostgreSQL database
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL=postgresql://user:password@your-postgres-host:5432/crm?schema=public

# JWT Secret - Generate a strong random string in production
# Command to generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-strong-random-jwt-secret-change-this

# Optional: Dropbox Integration
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=
DROPBOX_REDIRECT_URI=https://yourdomain.com/api/dropbox/callback

# Optional: Notifications
SLACK_WEBHOOK_URL=
SENDGRID_API_KEY=
