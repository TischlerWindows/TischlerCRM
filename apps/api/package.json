{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "build:lambda": "esbuild src/lambda.ts --bundle --platform=node --format=cjs --outfile=dist/lambda.cjs",
    "package:lambda": "mkdir -p dist/lambda && copy dist\\lambda.cjs dist\\lambda\\index.js && powershell Compress-Archive -Path dist\\lambda\\index.js -DestinationPath dist\\lambda.zip -Force",
  "typecheck": "tsc -p tsconfig.json --noEmit",
  "seed": "tsx prisma-seed.ts"
  },
  "dependencies": {
    "@crm/db": "workspace:*",
    "@crm/storage": "workspace:*",
    "@crm/types": "workspace:*",
    "@prisma/client": "5.17.0",
    "fastify": "4.27.0",
    "@fastify/cors": "9.0.1",
    "aws-lambda-fastify": "2.2.0",
    "dotenv": "16.4.5",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "typescript": "5.4.5",
    "tsx": "4.15.7",
    "@types/node": "20.11.19",
    "esbuild": "0.21.5"
  }
}