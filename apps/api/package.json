{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env -- tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "build:lambda": "esbuild src/lambda.ts --bundle --platform=node --format=cjs --outfile=dist/lambda.cjs",
    "package:lambda": "mkdir -p dist/lambda && copy dist\\lambda.cjs dist\\lambda\\index.js && powershell Compress-Archive -Path dist\\lambda\\index.js -DestinationPath dist\\lambda.zip -Force",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "seed": "tsx seed.ts",
    "db:generate": "cd ../../packages/db && pnpm exec prisma generate",
    "db:migrate": "cd ../../packages/db && pnpm exec prisma migrate dev",
    "db:setup": "pnpm run db:generate && pnpm run db:migrate && pnpm run seed"
  },
  "dependencies": {
    "@crm/db": "workspace:*",
    "@crm/storage": "workspace:*",
    "@crm/types": "workspace:*",
    "@fastify/cors": "9.0.1",
    "@prisma/client": "5.17.0",
    "aws-lambda-fastify": "2.2.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "16.4.5",
    "fastify": "4.27.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/node": "20.11.19",
    "dotenv-cli": "7.4.2",
    "esbuild": "0.21.5",
    "tsx": "4.15.7",
    "typescript": "5.4.5"
  }
}